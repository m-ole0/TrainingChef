<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto mt-5">
      <% if @users.present? %>
        <h4 class="text-center"><%= @user.name %>さんがフォローしているユーザー一覧</h4>
        <div class="text-center">
          <%= render "public/users/index", users: @users %>
        </div>
      <% else %>
        <h4 class="text-center"><%= @user.name %>さんはまだ誰もフォローしていません</h4>
      <% end %>
    </div>
  </div>
</div>