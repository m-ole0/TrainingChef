<div class="container p-5">
  <div class="row">
    <div class="col-md-6">
      <h5>パスワード再設定</h5>
      <%= form_with(model: resource, local: true, url: password_path(resource_name), method: :put) do |f| %>
        <%= render "layouts/errors", obj: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="field mt-3">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
          <% end %>
          <%= f.password_field :password, autofocus: true, class: "form-control" %>
        </div>
        <div class="field mt-3">
          <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="actions mt-3">
          <%= f.submit "パスワード変更", class: "btn btn-outline-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>