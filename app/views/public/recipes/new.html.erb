<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mx-auto text-center mt-5">
      <!--エラー文-->
      <%= render "layouts/errors", obj: @recipe %>
      <!--入力フォーム-->
      <%= form_with model: @recipe, url: recipes_path, method: :post, local: true do |f| %>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :recipe_image, "レシピ画像" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.file_field :recipe_image, accept: "image/*"%>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :title, "レシピ名" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_field :title, class:"form-control", placeholder:"レシピ名を入力してください(30文字以内)" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :material, "材料", class: "align-top" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_area :material, class:"form-control", placeholder:"材料(分量)を入力してください" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :process, "手順" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_area :process, class:"form-control", placeholder:"手順を入力してください" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :tag_name, "タグ" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_field :tag_name, value: @tag_list, class: 'form-control', placeholder:",で区切ると複数タグ追加できます" %>
          </div>
        </div>
        <div>
          <%= f.submit "レシピを投稿する", class:"btn btn-outline-info mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
