<table class="table table-bordered">
  <tr class="bg-light">
    <th>タグ名</th>
    <th>投稿件数</th>
    <th></th>
  </tr>
  <% tags.each do |tag| %>
  <tr>
    <td class="align-middle" style="width: 50%;">
      <%= tag.name %>
    </td>
    <td class="align-middle" style="width: 20%;">
      <%= tag.recipes.count %>件
    </td>
    <td class="align-middle" style="width: 30%;">
      <%= link_to "投稿を見る", tag_search_tag_path(tag), class:"btn btn-outline-info" %>
    </td>
  </tr>
  <% end %>
</table>