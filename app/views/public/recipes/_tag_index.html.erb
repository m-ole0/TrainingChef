<table class="table table-bordered">
  <tr class="bg-light">
    <th>タグ名</th>
    <th>投稿件数</th>
    <th></th>
  </tr>
  <% tags.each do |tag| %>
  <tr>
    <td style="width: 60%;">
      <%= tag.name %>
    </td>
    <td style="width: 20%;">
      <%= tag.recipes.count %>件
    </td>
    <td style="width: 20%;">
      <p>投稿を見る</p>
    </td>
  </tr>
  <% end %>
</table>