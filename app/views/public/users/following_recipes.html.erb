<div class="container">
  <div class="row">
    <div class="col-12 col-sm-7 mx-auto">
      <!--フォローしているユーザーのレシピ一覧（縦並び）-->
      <% if @following_recipes.present? %>
        <% @following_recipes.each do |recipe| %>
          <div class="card mt-2 mb-2">
            <div class="card-header text-center">
              <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.recipe_image, style:"width: 100%; object-fit: cover;" %>
              <% end %>
            </div>
            <div class="card-body" style="display: flex; align-items: center;">
              <div>
                <%= link_to user_path(recipe.user) do %>
                  <%= image_tag recipe.user.get_profile_image, class: "rounded-circle", style:"width: 60px; height: 60px;" %>
                <% end %>
              </div>
              <div>
                <ul style="list-style: none;">
                  <li><%=link_to recipe.user.name, user_path(recipe.user) %></li>
                  <li><b><%=link_to recipe.title, recipe_path(recipe) %></b></li>
                  <li><%= render "public/recipes/recipe_tag", recipe_tags: recipe.tags %></li>
                  <li><span id="favorite_btn_<%= recipe.id %>"><%= render "public/favorites/favorite_btn", recipe: recipe %></span>/コメント<%= recipe.comments.count %>件</li>
                <ul>
              </div>
            </div>
          </div>
        <% end %>
        <div class="col-12 d-flex justify-content-center my-4">
          <%= paginate @following_recipes %>
        </div>
      <% else %>
        <h4 class="mt-5 text-center">フォローしているユーザーの投稿がありません</h4>
      <% end %>
    </div>
  </div>
</div>

