<div class="container">
  <!--プロフィール表示-->
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto text-center">
      <table class="table table-borderless mx-auto mt-5">
        <tr>
          <td rowspan="2" class="align-middle" style="width:25%">
            <%= image_tag @user.get_profile_image, class: "rounded-circle", style:"width: 100px; height: 100px;" %>
          </td>
          <td class="align-middle" style="width:25%">
            <h5><%= @user.name %></h5>
          </td>
          <% if @user == current_user %>
            <td class="align-middle" style="width:25%">
              <%= link_to "編集する", edit_user_path, class: 'btn btn-primary ml-4' %>
            </td>
            <td class="align-middle" style="width:25%">
              <%= link_to "いいねしたレシピ", favorite_recipes_user_path(@user), class: 'btn btn-success ml-4' %>
            </td>
          <% else %>
            <td id="follow_btn_<%= @user.id %>">
              <%= render "public/relationships/follow_btn", user: @user %>
            </td>
          <% end %>
        </tr>
        <tr>
          <td>投稿<%= @recipes.count %>件</td>
          <td>フォロー<%= link_to @user.following_users.count, user_followings_path(@user)  %>人</td>
          <td id="follower_count_<%= @user.id %>"><%= render 'public/relationships/follower_count', user: @user %></td>
        </tr>
        <% if @user.introduction.present? %>
          <tr style="border: 1px solid #000;">
            <td colspan="4">
              <%= @user.introduction %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <!--投稿一覧-->
  <div class="row">
    <% if @recipes.present? %>
      <%= render 'public/recipes/recipe_index', recipes: @recipes %>
    <% else %>
      <div class="mx-auto">
        <h4 class="text-center mt-2">投稿はありません。</h4>
      </div>
    <% end %>
  </div>
</div>