<div class="container">
  <!--プロフィール表示-->
  <div class="row">
    <div class="col text-center">
      <h4 class="mt-5"><%= @user.name %>のプロフィール</h4>
      <table class="table table-borderless mx-auto", style="width: 70%">
        <tr>
          <td rowspan="2">あとで画像入れる</td>
          <td><%= @user.name %></td>
          <% if @user == current_user %>
            <td><%= link_to "編集する", edit_user_path, class: 'btn btn-primary ml-4' %></td>
            <td><%= link_to "いいねしたレシピ", recipes_ranking_path, class: 'btn btn-success ml-4' %></td>
          <% end %>
        </tr>
        <tr>
          <td>投稿<%= @recipes.count %>件</td>
          <td>フォロー<%= @user.followeds.count %>人</td>
          <td>フォロワー<%= @user.followers.count %>人</td>
        </tr>
        <% if @user.introduction.present? %>
          <tr style="border: 1px solid #000;">
            <td colspan="4">
              <%= @user.introduction %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <!--投稿一覧-->
  <div class="row">

  </div>
</div>