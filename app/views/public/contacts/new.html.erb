<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mx-auto text-center mt-5">
      <h2 class="mt-5">お問い合わせフォーム</h2>
      <%= render "layouts/errors", obj: @contact %>
      <%= form_with(model: @contact, local: true) do |f| %>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :name, "名前" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_field :name, placeholder: "名前を入力してください", class:"form-control" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :content, "お問合せ内容" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", class: "form-control" %>
          </div>
        </div>
        <div>
          <%= f.submit "送信する", class:"btn btn-outline-info mt-4"%>
          <%= link_to "マイページへ", user_path(current_user), class:"btn btn-outline-danger mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>