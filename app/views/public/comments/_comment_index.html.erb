<% recipe.comments.each do |comment| %>
  <div class="mt-1" style="border: 1px solid #ccc; display: flex; align-items: center;">
    <div class="ml-4">
      <%= image_tag comment.user.get_profile_image , class: "rounded-circle", style:"width: 50px; height: 50px;" %>
    </div>
    <div>
      <ul style="list-style: none;">
        <li><%= link_to comment.user.name, user_path(comment.user) %></li>
        <li><%= comment.comment %></li>
      </ul>
    </div>
  </div>
  <% if comment.user == current_user || admin_signed_in? %>
    <div class="text-right mt-1">
      <%= link_to "削除する", recipe_comment_path(comment.recipe, comment), method: :delete, remote: true, class:"btn btn-danger" %>
    </div>
  <% end %>
<% end %>
