<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-5">
        <div>
          <table class="table table-bordered">
            <% @users.each do |user| %>
              <tr style="height: 60px;">
                <td class="text-center align-middle" style="width: 15%;">
                  <%= link_to admin_user_path(user) do %>
                    <%= image_tag user.get_profile_image, class: "rounded-circle", style:"width: 50px; height: 50px;" %>
                  <% end %>
                </td>
                <td class="align-middle" style="width: 30%;">
                  <%= link_to admin_user_path(user) do %>
                    ユーザー名:<%= user.name %>
                  <% end %>
                </td>
                <td class="align-middle" style="width: 35%;">
                  <ul style="list-style: none;">
                    <li>投稿数:<%= user.recipes.count %>件</li>
                    <li>フォロー数:<%= user.following_users.count %>名</li>
                    <li>フォロワー数:<%= user.follower_users.count %>名</li>
                  </ul>
                </td>
                <td class="align-middle" class="text-center" style="width: 20%;">
                  <%= link_to "編集する", edit_admin_user_path(user), class:"btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </table>


        </div>
    </div>
  </div>
</div>