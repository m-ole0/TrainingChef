<div class="container">
  <!--プロフィール表示-->
  <div class="row">
    <div class="col-7 text-center mx-auto">
      <table class="table mt-5">
        <tr>
          <td>プロフィール画像</td>
          <td rowspan="2" class="align-middle"><%= image_tag @user.get_profile_image, style:"width: 100px; height: 100px;" %></td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>自己紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>