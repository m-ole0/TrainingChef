<div class="container">
  <!--プロフィール表示-->
  <div class="row">
    <div class="col-7 mx-auto">
      <table class="table table-borderless mt-5">
        <tr>
          <td class="text-center align-middle">プロフィール画像</td>
          <td class="align-middle"><%= image_tag @user.get_profile_image, style:"width: 200px; height: 200px;" %></td>
        </tr>
        <tr>
          <td class="text-center">ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="text-center">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="text-center">自己紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>