<div class="container">
  <!--プロフィール表示-->
  <div class="row">
    <div class="col-12 col-sm-8 col-md-7 mx-auto">
      <table class="table table-borderless mt-5">
        <tr>
          <td class="text-center align-middle" style="width: 35%">プロフィール画像</td>
          <td class="align-middle" style="width: 65%"><%= image_tag @user.get_profile_image, style:"width: 200px; height: 200px;" %></td>
        </tr>
        <tr>
          <td class="text-center align-middle">ユーザー名</td>
          <td class="align-middle"><%= @user.name %></td>
        </tr>
        <tr>
          <td class="text-center align-middle">メールアドレス</td>
          <td class="align-middle"><%= @user.email %></td>
        </tr>
        <tr>
          <td class="text-center align-middle">自己紹介文</td>
          <td class="align-middle"><%= safe_join(@user.introduction.split("\n"),tag(:br))%></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>