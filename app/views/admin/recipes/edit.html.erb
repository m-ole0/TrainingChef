<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mt-5 mx-auto">
      <%= image_tag @recipe.recipe_image, style:"width: 100%; object-fit: cover;" %>
    </div>
    <div class="col-sm-12 col-lg-6 mx-auto text-center mt-5">
      <!--エラー文-->
      <% if @recipe.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @recipe.errors.count %>件のエラーが発生しました
          </h6>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
      <% end %>
       <!--入力フォーム-->
      <%= form_with model: @recipe, url: admin_recipe_path, method: :patch, local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td class="align-middle">
            <%= f.label :recipe_image, "レシピ画像" %>
          </td>
          <td class="align-middle text-left">
            <%= f.file_field :recipe_image, accept: "image/*"%>
          </td>
        </tr>
        <tr>
          <td class="align-middle">
            <%= f.label :title, "レシピ名" %>
          </td>
          <td class="align-middle">
            <%= f.text_field :title, class:"form-control" %>
          </td>
        </tr>
        <tr>
          <td class="align-middle">
            <%= f.label :material, "材料", class: "align-top" %>
          </td>
          <td class="align-middle">
            <%= f.text_area :material, class:"form-control" %>
          </td>
        </tr>
        <tr>
          <td class="align-middle">
          <%= f.label :process, "手順" %>
          </td>
          <td class="align-middle">
          <%= f.text_area :process, class:"form-control" %>
          </td>
        </tr>
        <tr>
          <td class="align-middle">
            <%= f.label :name, "タグ" %>
          </td>
          <td class="align-middle">
            <%= f.text_field :name, value: @tag_list, class: 'form-control' %>
          </td>
        </tr>
      </table>
        <%= f.submit "編集内容を保存", class:"btn btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>