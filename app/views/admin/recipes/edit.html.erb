<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mt-5 mx-auto">
      <%= image_tag @recipe.recipe_image, style:"max-height: 500px; width: 100%; object-fit: cover;" %>
    </div>
    <div class="col-sm-12 col-lg-6 mx-auto text-center mt-5">
      <!--エラー文-->
      <%= render "layouts/errors", obj: @recipe %>
       <!--入力フォーム-->
      <%= form_with model: @recipe, url: admin_recipe_path, method: :patch, local: true do |f| %>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :recipe_image, "レシピ画像" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.file_field :recipe_image, accept: "image/*"%>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :title, "レシピ名" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :material, "材料", class: "align-top" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_area :material, class:"form-control" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :process, "手順" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_area :process, class:"form-control" %>
          </div>
        </div>
        <div class="row d-flex mt-3">
          <div class="my-auto col-12 col-md-3 text-left">
            <%= f.label :name, "タグ" %>
          </div>
          <div class="my-auto text-left col-12 col-md-9">
            <%= f.text_field :name, value: @tag_list, class: 'form-control' %>
          </div>
        </div>
        <div>
          <%= f.submit "編集内容を保存", class:"btn btn-outline-info mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>