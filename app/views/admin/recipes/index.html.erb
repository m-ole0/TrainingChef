<div class="container">
  <div class="row">
    <% if @recipe.present? %>
      <%= render 'admin/recipes/index', recipes: @recipes %>
        <div class="col-12 d-flex justify-content-center my-4">
          <%= paginate @recipes %>
        </div>
    <% else %>
      <div class="col-12 mx-auto text-center mt-5">
        <h4>まだ投稿がありません。</h4>
      </div>
    <% end %>
  </div>
</div>