<div class="container">
  <div class="row">
    <div class="col-12 col-md-7 mx-auto mt-5">
      <table class="table table-bordered">
        <% @tags.each do |tag| %>
          <tr>
            <td class="align-middle" style="width: 40%;">
              <%= tag.name %>
            </td>
            <td class="align-middle" style="width: 40%;">
              <%= link_to admin_tag_search_tag_path(tag) do %>
                関連投稿:<%= tag.recipes.count %>件
              <% end %>
            </td>
            <td class="align-middl text-center" style="width: 20%;">
              <%= link_to "編集する", edit_admin_tag_path(tag), class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>